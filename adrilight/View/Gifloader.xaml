                                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Thứ tự LED" VerticalAlignment="Top" Margin="19,138,0,0"/>
                                <Button Content="Nạp từ file " Margin="35,212,35,108"/>
                                <Button Content="Lưu thứ tự" Margin="35,254,35,66"/>
                                <Button Content="Đặt lại" Margin="35,294,35,26"/>
                            </Grid>
                        </StackPanel>
                    </materialDesign:Card>
                </Grid>
            </TabItem>
            <TabItem Header="Màu sắc">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="JPG/GIF">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <Button Content="Lưu" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="584,384,0,0"/>
        <Button Content="Hủy" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="690,383,0,0"/>

    </Grid>
</Window>
