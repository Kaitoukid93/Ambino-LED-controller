<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:adrilight.View"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="adrilight.View.Gifloader"
        mc:Ignorable="d"
        Title="Gifloader" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Height="420" VerticalAlignment="Top" Width="788" Margin="0,0,0,-1"/>
        <TabControl HorizontalAlignment="Left" Height="380" VerticalAlignment="Top" Width="794" Margin="0,0,-2,0">
            <TabItem Header="Cấu hình">
                <Grid Background="#FFE5E5E5" Height="360" VerticalAlignment="Top">
                    <materialDesign:Card  HorizontalAlignment="Left" Width="272" RenderTransformOrigin="0.5,0.5" Margin="0,0,0,9">
                        <materialDesign:Card.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform AngleY="0.314"/>
                                <RotateTransform/>
                                <TranslateTransform Y="0.745"/>
                            </TransformGroup>
                        </materialDesign:Card.RenderTransform>
                        <StackPanel HorizontalAlignment="Left" Height="351" VerticalAlignment="Top" Width="272">
                            <Grid Height="352">
                                <TextBox TextWrapping="Wrap" Text="TextBox" Margin="174,10,11,319"/>
                                <TextBox TextWrapping="Wrap" Text="TextBox" Margin="175,44,10,285"/>
                                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="LED X (số LED 1 FAN)" VerticalAlignment="Top" Margin="15,18,0,0"/>
